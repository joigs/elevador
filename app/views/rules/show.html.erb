<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 my-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @rule.point %></h1>

  <div class="bg-gray-900 p-6 rounded-lg shadow-md">
    <p class="text-gray-400">
      <strong class="text-white">Comprobación:</strong>
      <%= @rule.ruletype.gygatype_number %> <%= @rule.ruletype.rtype %>
    </p>
    <p class="text-gray-400">
      <strong class="text-white">Clasificación del ascensor:</strong>
      Grupo: <%= @rule.groups.pluck(:name).join(', ') %>
    </p>
    <p class="text-gray-400">
      <strong class="text-white">Nivel de importancia:</strong>
      <%= @rule.level %>
    </p>
    <p class="text-gray-400">
      <strong class="text-white">Tipo de defecto:</strong>
      <%= display_rule_ins_type(@rule) %>
    </p>


    <div class="flex flex-wrap justify-start space-x-2 mt-4">
      <div class="lg:w-auto flex flex-col space-y-2">
        <% if Current.user&.admin %>
          <%= link_to 'Modificar defecto', edit_rule_path(@rule), class: "px-4 py-2 rounded bg-yellow-600 text-gray-900 font-bold hover:bg-yellow-700 transition duration-300" %>

          <%= link_to 'Eliminar defecto', rule_path(@rule), class: "px-4 py-2 rounded bg-red-600 text-gray-900 font-bold hover:bg-red-700 transition duration-300 mt-4", data: { controller: "delete-confirmation", action: "click->delete-confirmation#deleteItem", delete_confirmation_redirect_url_value: "/rules" } %>
        <% end %>
        <%= link_to 'Volver a defectos', rules_path, class: "px-4 py-2 rounded bg-blue-500 text-gray-900 font-bold hover:bg-blue-600 transition duration-300" %>

      </div>
    </div>


  </div>







</div>
