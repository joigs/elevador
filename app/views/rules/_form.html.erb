<%= form_with(model: @rule, builder: CustomFormBuilder, local: true, url: @rule.new_record? ? (@with_same_code ? create_with_same_code_rules_path : (@with_new_code ? create_with_new_code_rules_path : rules_path)) : rule_path(@rule)) do |form| %>
  <% if @rule.errors.any? %>
    <div class="bg-red-800 text-white text-sm font-bold px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">¡Error!</strong>
      <span class="block sm:inline"><%= pluralize(@rule.errors.count, 'error') %> impidieron que el defecto fuera guardado:</span>
      <ul class="mt-3 list-disc list-inside text-sm">
        <% @rule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :Defecto, class: "block text-gray-300 font-bold mb-2" %>
    <%= form.text_area :point, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-white bg-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :"Comprobación a la que corresponde", class: "block text-gray-300 font-bold mb-2" %>
    <%= form.select :ruletype_id, options_for_select(Ruletype.pluck(Arel.sql("CONCAT(gygatype_number, ' - ', rtype)"), :id), @last_used_rule), {}, class: "block appearance-none w-full bg-gray-700 border border-gray-600 text-white py-2 px-3 pr-8 rounded leading-tight focus:outline-none focus:bg-gray-500 focus:border-gray-500" if @rule.new_record? %>
  </div>

  <div class="mb-4">
    <%= form.label :"Clasificación del ascensor", class: "block text-gray-300 font-bold mb-2" %>
    <%= form.collection_check_boxes(:group_ids, Group.all, :id, :number, item_wrapper_class: "inline-block mr-2", item_wrapper_tag: 'div', item_label_class: 'text-white') %>
  </div>

  <div class="mb-4">
    <%= form.label :"Nivel de importancia", class: "block text-gray-300 font-bold mb-2" %>
    <%= form.collection_check_boxes(:level, [['L', 'L'], ['G', 'G']], :first, :last, item_wrapper_class: "inline-block mr-2", item_wrapper_tag: 'div', item_label_class: 'text-white') %>
  </div>

  <div class="mb-4">
    <%= form.label :"Tipo de defecto", class: "block text-gray-300 font-bold mb-2" %>
    <%= form.collection_check_boxes(:ins_type, [['DO', 'DO'], ['VI', 'VI'], ['FU', 'FU'], ['DI', 'DI']], :first, :last, item_wrapper_class: "inline-block mr-2", item_wrapper_tag: 'div', item_label_class: 'text-white') %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "#{@rule.new_record? ? 'Crear' : 'Modificar'} defecto", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
