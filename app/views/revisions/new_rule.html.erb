<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 my-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Definir nuevo defecto</h1>

  <div class="bg-gray-800 shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <%= form_with(model: @another, builder: CustomFormBuilder, local: true, url: create_rule_revision_path(@inspection.id)) do |form| %>
      <%= hidden_field_tag :inspection_id, @inspection.id %>
      <%= hidden_field_tag "another[section]", @section %>

  <% if @another.errors.any? %>
        <div class="text-red-400 bg-red-800 p-2 rounded">
          <h2><%= "Error: " %> Defecto no pudo ser guardado:</h2>
          <ul>
            <% @another.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :Defecto, class: "block text-gray-300 font-bold mb-2" %>
        <%= form.text_area :point, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-white bg-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>



      <div class="mb-4">
        <%= form.label :"Nivel de importancia", class: "block text-gray-300 font-bold mb-2" %>
        <%= form.collection_check_boxes(:level, [['L', 'L'], ['G', 'G']], :first, :last, item_wrapper_class: "inline-block mr-2", item_wrapper_tag: 'div', item_label_class: 'text-white') %>
      </div>

      <div class="mb-4">
        <%= form.label :"Tipo de defecto", class: "block text-gray-300 font-bold mb-2" %>
        <%= form.collection_check_boxes(:ins_type, [['DO', 'DO'], ['VI', 'VI'], ['FU', 'FU'], ['DI', 'DI']], :first, :last, item_wrapper_class: "inline-block mr-2", item_wrapper_tag: 'div', item_label_class: 'text-white') %>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit "Crear defecto", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

  </div>

  <div class="text-center mt-4">
    <%= link_to 'Volver a inspecciÃ³n', edit_revision_path(inspection_id: @inspection.id, section: @section), class: "px-4 py-2 rounded bg-blue-500 text-white hover:bg-blue-600 transition duration-300" %>

  </div>
</div>
