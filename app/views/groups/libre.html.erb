<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 bg-gray-900">

  <h1 class="text-4xl font-bold text-gray-100 mb-10 text-center">Grupos libres</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-4">
    <% @groups.each do |group| %>
      <div class="bg-gray-800 rounded-lg shadow overflow-hidden">
        <div class="p-6">
          <h2 class="text-2xl font-bold text-gray-300 mb-4"><%= group.name %></h2>
          <%= link_to "Ver detalles", group, class: "inline-block px-6 py-2 bg-blue-600 text-white font-bold rounded hover:bg-blue-700 transition duration-300" %>
        </div>
      </div>
    <% end %>
  </div>


</div>

<div class="text-center mt-12">
  <%= link_to "Volver a clasificaciones normales", groups_path, class: "px-6 py-2 bg-indigo-600 text-white font-bold rounded hover:bg-indigo-700 transition duration-300" %>
</div>
