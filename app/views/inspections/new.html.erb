  <h1 class="text-3xl font-bold text-gray-800 mb-8">Nueva Inspección</h1>

  <div class="mb-6 bg-gray-900 shadow overflow-hidden sm:rounded-lg pb-8">
    <%= render "form", inspection: @inspection %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Volver atrás", @back_path,
