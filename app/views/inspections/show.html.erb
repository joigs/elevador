
<%= render @inspection %>

<p>
  <strong>Lugar de la inspección:</strong>
  <%= @inspection.place %>
</p>
<p>
  <strong>Fecha de emisión del informe:</strong>
  <%= format_date(@inspection.inf_date) %>
</p>
<p>
  <strong>Inspector asignado:</strong>
  <%= @inspection.user.real_name if @inspection.user %>
</p>

<div>

<% if @control2 %>
    <%= link_to 'Realizar inspección', edit_ladder_detail_path(@detail) if @inspection.owner? && @control %>
  <% else %>
    <%= link_to 'Realizar inspección', edit_detail_path(@detail) if @inspection.owner? && @control %>

  <% end %>
</div>


<div>
  <% if @control2 %>
    <%= link_to 'Ver fallas encontradas', ladder_revision_path(inspection_id: @inspection) if Current.user.admin || @inspection.owner?%>
    <% else %>
    <%= link_to 'Ver fallas encontradas', revision_path(inspection_id: @inspection) if Current.user.admin || @inspection.owner?%>

  <% end %>
</div>

<div>
  <%= link_to 'Generar informe', download_document_inspection_path(@inspection), class: 'btn btn-primary' if @inspection.state=="Cerrado" && Current.user.admin %>
</div>




<div>
  <%= link_to "Modificar inspección", edit_inspection_path(@inspection) if Current.user.admin && @inspection.ins_date > Date.today %>
  <br>
  <%= link_to "Ver todas las inspecciones", inspections_path %>
  <br>
  <%= link_to 'Eliminar inspección', inspection_path(@inspection), data:
    {turbo_method: :delete,
     turbo_confirm: 'Estás seguro?'} if  Current.user.admin %>
</div>
