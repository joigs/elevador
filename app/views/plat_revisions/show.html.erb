<div class="bg-gray-800 text-white min-h-screen">
  <div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold mb-4">
      Inspección N° <%= @inspection.number %>
    </h1>

    <h2 class="text-2xl font-semibold mb-3">Imágenes Generales</h2>
    <% @general_revision_photos.each do |photo| %>
      <div class="relative inline-block" data-controller="rotate" data-photo-id="<%= photo.id %>">
        <div class="relative">
          <%= image_tag photo.photo, width: 200, class: "w-48 rounded-lg shadow-lg m-1" %>
          <% if Current.user.admin? || @inspection.owner? %>
            <%= form_with url: revision_photo_path(photo),
                          method: :delete,
                          data: { controller: 'confirm-delete' },
                          class: 'absolute top-0 right-0' do |form| %>
              <%= form.submit '✖',
                              data: { action: 'confirm-delete#confirm' },
                              class: 'bg-red-600 text-white px-2 py-1 rounded-full cursor-pointer' %>
            <% end %>
          <% end %>
        </div>

        <% if Current.user.admin? || @inspection.owner? %>
          <div class="flex justify-between mt-1 mb-4">
            <%= button_tag '⟲',
                           type: 'button',
                           data: { action: 'rotate#rotateLeft' },
                           class: 'bg-gray-600 text-white px-2 py-1 rounded-full cursor-pointer' %>
            <%= button_tag '⟳',
                           type: 'button',
                           data: { action: 'rotate#rotateRight' },
                           class: 'bg-gray-600 text-white px-2 py-1 rounded-full cursor-pointer' %>
          </div>
        <% end %>
      </div>

      <div class="p-3 bg-gray-700 rounded-lg mb-6">
        <span class="text-gray-300">
          <%= photo.code.to_s.sub('GENERALCODE', '') %>
        </span>
      </div>
    <% end %>

    <h2 class="text-2xl font-semibold mb-3 mt-10">Defectos Encontrados</h2>

    <% @defects.each do |defect| %>
      <% rule = defect.rules_plat %>
      <div class="p-3 bg-gray-700 rounded-lg mb-6">
        <p>
          <strong>Defecto:</strong>
          <%= rule.code %> <%= rule.point %> <%= defect.level %>
          <span class="text-gray-300">
            . Razón: <%= defect.comment %>
          </span>
        </p>

        <% constructed_code = "#{rule.code} #{rule.point}" %>
        <% photos = @photos_by_code[constructed_code] || [] %>

        <% photos.each do |photo| %>
          <div class="relative inline-block" data-controller="rotate" data-photo-id="<%= photo.id %>">
            <div class="relative">
              <%= image_tag photo.photo, width: 200, class: "w-48 rounded-lg shadow-lg m-1" %>
              <% if Current.user.admin? || @inspection.owner? %>
                <%= form_with url: revision_photo_path(photo),
                              method: :delete,
                              data: { controller: 'confirm-delete' },
                              class: 'absolute top-0 right-0' do |form| %>
                  <%= form.submit '✖',
                                  data: { action: 'confirm-delete#confirm' },
                                  class: 'bg-red-600 text-white px-2 py-1 rounded-full cursor-pointer' %>
                <% end %>
              <% end %>
            </div>

            <% if Current.user.admin? || @inspection.owner? %>
              <div class="flex justify-between mt-1">
                <%= button_tag '⟲',
                               type: 'button',
                               data: { action: 'rotate#rotateLeft' },
                               class: 'bg-gray-600 text-white px-2 py-1 rounded-full cursor-pointer' %>
                <%= button_tag '⟳',
                               type: 'button',
                               data: { action: 'rotate#rotateRight' },
                               class: 'bg-gray-600 text-white px-2 py-1 rounded-full cursor-pointer' %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="container mx-auto px-4 py-6">
    <div class="flex flex-wrap justify-between items-center space-y-4 md:space-y-0">
      <% if Current.user.admin && @inspection.result != 'En revisión' %>
        <%= link_to 'Volver a ficha de inspección',
                    inspection_path(@inspection),
                    class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded shadow transition duration-300 ease-in-out" %>
      <% end %>

      <% if @inspection.result == 'En revisión' %>
        <div class="mt-4">
          <% if Current.user.admin %>
            <%= link_to 'Volver a ficha de inspección',
                        inspection_path(@inspection),
                        class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded shadow transition duration-300 ease-in-out mr-2" %>
          <% end %>

          <% if @inspection.owner? %>
            <%= link_to 'Volver a la inspección',
                        edit_plat_revision_path(inspection_id: @inspection.id, section: 0),
                        class: "px-4 py-2 rounded bg-blue-500 text-gray-900 font-bold hover:bg-blue-600 transition duration-300" %>

            <%= button_to 'Terminar inspección',
                          close_inspection_inspection_path(id: @inspection.id, revision_id: @revision_base.id),
                          method: :patch,
                          data: { controller: 'sweetalert', action: 'sweetalert#confirm', turbo_frame: "_top" },
                          class: "px-4 py-2 rounded bg-red-600 text-gray-900 font-bold hover:bg-red-700 transition duration-300 mt-4" %>
          <% end %>
        </div>
      <% else %>
        <% if @inspection.owner? %>
          <%= link_to 'Volver atrás',
                      inspection_path(@inspection),
                      class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded shadow transition duration-300 ease-in-out" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
