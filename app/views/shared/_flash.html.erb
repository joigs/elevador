<%= turbo_frame_tag 'flash' do %>
  <% if alert %>
    <div class="max-w-lg mx-auto mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <h2 class="text-center font-bold"><%= alert %></h2>
    </div>
  <% elsif notice %>
    <div class="max-w-lg mx-auto mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
      <h2 class="text-center font-bold"><%= notice %></h2>
    </div>
  <% end %>
<% end %>
