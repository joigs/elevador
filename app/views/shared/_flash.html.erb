<%= turbo_frame_tag 'flash' do %>
  <% if alert %>
    <% alert_type = flash[:alert_type] || "error" %>
    <% alert_title = case alert_type
                     when "info" then "InformaciÃ³n"
                     when "warning" then "Advertencia"
                     else "Error"
                     end %>
    <%= javascript_tag do %>
      Swal.fire({
      icon: '<%= j alert_type %>',
      title: '<%= j alert_title %>',
      text: '<%= j alert %>',
      confirmButtonText: 'OK'
      });
    <% end %>
  <% elsif notice %>
    <div class="max-w-lg mx-auto mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
      <h2 class="text-center font-bold"><%= notice %></h2>
    </div>
  <% end %>
<% end %>