<%= form_with url: form_url, method: :get, class: "flex items-center mt-4" do |form| %>
  <%= form.text_field :query_text, placeholder: 'Search', class: "form-input mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-gray-600 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out",
                      onChange: 'this.form.requestSubmit()', value: params[:query_text] %>
  <%= button_tag(type: 'submit', class: "ml-4 px-4 py-2 bg-blue-500 text-white font-bold text-xs uppercase rounded hover:bg-blue-600 focus:outline-none focus:shadow-outline") do %>
    Buscar
  <% end %>
<% end %>
