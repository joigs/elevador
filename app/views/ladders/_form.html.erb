<%= form_with(model: ladder, builder: CustomFormBuilder, local: true, class: "contents") do |form| %>
  <% if ladder.errors.any? %>
    <div class="bg-red-800 text-white text-sm font-bold px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">¡Error!</strong>
      <span class="block sm:inline"><%= "Error: " %> impidieron que la escalera fuera guardada:</span>
      <ul class="mt-3 list-disc list-inside text-sm">
        <% ladder.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :number, "Número", class: "block text-gray-300 font-bold mb-2" %>
    <%= form.text_field :number, class: "shadow appearance-none border rounded w-full py-2 px-3 text-white bg-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :point, "Defecto", class: "block text-gray-300 font-bold mb-2" %>
    <%= form.text_area :point, rows: 3, class: "shadow appearance-none border rounded w-full py-2 px-3 text-white bg-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :code, "Código", class: "block text-gray-300 font-bold mb-2" %>
    <%= form.text_field :code, class: "shadow appearance-none border rounded w-full py-2 px-3 text-white bg-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :priority, "Prioridad", class: "block text-gray-300 font-bold mb-2" %>
    <%= form.text_field :priority, class: "shadow appearance-none border rounded w-full py-2 px-3 text-white bg-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>


  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
