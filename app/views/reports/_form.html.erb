<%= form_with(model: report) do |form| %>
  <% if report.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(report.errors.count, "error") %> Información del informe no pudo ser guardada:</h2>

      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <di>
    <%= form.label :"Certificado MINVU", style: "display: block" %>
    <%= form.text_field :certificado_minvu %>
  </di>


  <div>
    <%= form.label :"N° de instalación", style: "display: block" %>
    <%= form.text_field :instalation_number %>
  </div>


  <div data-controller="certificacion-anterior">
    <%= form.label :cert_ant, "Certificacion anterior", style: "display: block" %>
    <div>
      <%= form.radio_button :cert_ant, 'Si', checked: true, data: { action: "certificacion-anterior#toggleFields" } %>
      <%= form.label :cert_ant, 'Si', value: 'Si' %>
    </div>
    <div>
      <%= form.radio_button :cert_ant, 'No', data: { action: "certificacion-anterior#toggleFields" } %>
      <%= form.label :cert_ant, 'No', value: 'No' %>
    </div>

    <!-- Fields to toggle -->
    <div data-certificacion-anterior-target="toggleable">
      <div>
        <%= form.label :"fecha certificacion anterior", style: "display: block" %>
        <%= form.date_field :fecha %>
      </div>

      <div>
        <%= form.label :"Empresa certificadora anterior", style: "display: block" %>
        <%= form.text_field :empresa_anterior %>
      </div>

      <div>
        <%= form.label :"Rol", style: "display: block" %>
        <%= form.text_field :ea_rol %>
      </div>

      <div>
        <%= form.label :"Rut", style: "display: block" %>
        <%= form.text_field :ea_rut %>
      </div>

    </div>
  </div>





  <div>
    <%= form.label :"Empresa mantenedora", style: "display: block" %>
    <%= form.text_field :empresa_mantenedora %>
  </div>

  <div>
    <%= form.label :"Rol", style: "display: block" %>
    <%= form.text_field :em_rol %>
  </div>

  <div>
    <%= form.label :"Rut", style: "display: block" %>
    <%= form.text_field :em_rut %>
  </div>

  <div>
    <p>Vigencia contrato de mantención</p>
    <%= form.label :"Fecha inicio", style: "display: block" %>
    <%= form.date_field :vi_co_man_ini %>
  </div>

  <div>
    <%= form.label :"Fecha termino", style: "display: block" %>
    <%= form.date_field :vi_co_man_ter %>
  </div>

  <div>
    <%= form.label :"Nombre técnico mantenedor", style: "display: block" %>
    <%= form.text_field :nom_tec_man %>
  </div>

  <div>
    <%= form.label :"Rut", style: "display: block" %>
    <%= form.text_field :tm_rut %>
  </div>

  <div>
    <%= form.label :"Último registro de mantención N°", style: "display: block" %>
    <%= form.number_field :ul_reg_man %>
  </div>

  <div>
    <%= form.label :"Fecha Último registro de mantención", style: "display: block" %>
    <%= form.date_field :urm_fecha %>
  </div>


  <div>
    <%= form.submit "Guardar información" %>
  </div>
<% end %>
