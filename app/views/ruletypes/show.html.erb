<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 my-8">


  <%= render @ruletype %>

  <div class="bg-gray-800 p-6 rounded-lg shadow-md text-gray-300 mt-4">
    <p><strong class="text-white">Conjunto al que pertenece:</strong> <%= @ruletype.gygatype %></p>
  </div>

  <div class="mt-6 flex space-x-4">
    <% if Current.user&.admin %>
      <%= link_to 'Eliminar Comprobación', ruletype_path(@ruletype), class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition duration-300 focus:outline-none focus:shadow-outline", data: { controller: "delete-confirmation", action: "click->delete-confirmation#deleteItem", delete_confirmation_redirect_url_value: "/ruletypes" } %>
    <% end %>
    <%= link_to "Volver atrás", ruletypes_path, class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300 focus:outline-none focus:shadow-outline" %>
  </div>
</div>
