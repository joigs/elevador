<%= form_with(model: item, class: "max-w-xl mx-auto p-6 bg-white rounded-lg shadow-md") do |form| %>
  <% if item.errors.any? %>
    <div class="bg-red-100 text-red-700 border border-red-400 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"><%= pluralize(item.errors.count, "error") %></strong>
      <span class="block sm:inline"> No se pudo guardar el activo:</span>
      <ul class="list-disc pl-5 mt-3">
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-4">
    <%= form.label :identificador, class: "block font-medium text-gray-700" %>
    <%= form.text_field :identificador, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div class="mt-4">
    <%= form.label :group_id, "ClasificaciÃ³n del ascensor", class: "block font-medium text-gray-700" %>
    <%= form.select :group_id, options_for_select(Group.all.map { |g| [g.number, g.id] }, item.group_id), {}, {class: "form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm"} if Current.user&.admin && item.new_record? %>
  </div>

  <div class="mt-4">
    <%= form.label :principal_id, "Empresa mandante", class: "block font-medium text-gray-700" %>
    <%= form.collection_select :principal_id, Principal.all, :id, :name, {prompt: 'Selecciona una mandante'}, {class: "form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm"} %>
  </div>

  <div class="mt-6">
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
