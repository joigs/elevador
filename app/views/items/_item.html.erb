<div id="<%= dom_id item %>" class="max-w-xl mx-auto p-6 bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
  <h2 class="text-xl font-bold text-gray-100 mb-4"><%= item.identificador %></h2>

  <div class="text-gray-300 space-y-2">
    <p>Clasificación: Grupo N°<%= item.group.number %></p>
    <p>Empresa: <%= item.principal&.name %></p>

    <% inspection = last_inspection(item) %>
    <% if inspection %>
      <p>Última inspección: <%= format_date(inspection.ins_date) %></p>
      <p>Estado: <%= inspection.result %></p>
    <% else %>
      <p>Aun no hay inspecciones.</p>
    <% end %>
  </div>

  <% if controller_name == 'items' && action_name == 'index' %>
    <div class="mt-4">
      <%= link_to 'Ver más detalles', item_path(item), 'data-turbo-frame': "_top", class: "text-blue-400 hover:text-blue-500 transition ease-in-out duration-150" %>
    </div>
  <% end %>
</div>
