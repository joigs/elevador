<div id="<%= dom_id user %>" class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl">
  <div class="p-8">
    <div class="tracking-wide text-sm font-medium mb-6">Perfil del Usuario</div>

    <p class="text-gray-500">
      <strong class="text-gray-900">Nombre de usuario:</strong>
      <%= user.username %>
    </p>

    <p class="text-gray-500 mt-2">
      <strong class="text-gray-900">Nombre real:</strong>
      <%= user.real_name %>
    </p>

    <p class="text-gray-500 mt-2">
      <strong class="text-gray-900">Rol:</strong>
      <%= user.admin ? 'Administrador' : 'Inspector' %>
    </p>

    <p class="text-gray-500 mt-2">
      <strong class="text-gray-900">Correo electr√≥nico:</strong>
      <%= user.email %>
    </p>

    <div class="mt-4">
      <% if controller_name == 'users' && action_name == 'index' %>
        <%= link_to 'Mostrar usuario', user_path(user), class: "inline-block px-6 py-2 border border-blue-500 text-blue-500 font-medium text-xs leading-tight uppercase rounded hover:bg-blue-500 hover:text-white focus:outline-none focus:ring-0 transition duration-150 ease-in-out", 'data-turbo-frame': "_top" %>
      <% end %>
    </div>
  </div>
</div>
